{
  "compileOnSave": false,
  "compilerOptions": {
      "baseUrl": "./",
      "outDir": "./dist/out-tsc",
      "sourceMap": true,
      "declaration": false,
      "downlevelIteration": true,
      "experimentalDecorators": true,
      "module": "es2020",
      "moduleResolution": "node",
      "importHelpers": true,
      "target": "ES2022",
    "resolveJsonModule": true,
    "esModuleInterop": true,
      "typeRoots": [
          "node_modules/@types"
      ],
      "lib": [
          "es2018",
          "dom"
      ],
      "paths": {
          "@app/*": ["src/app/*"],
          "@environments/*": ["src/environments/*"],
          "@json/*": ["src/app/data/json/*"],
          "stream": ["./node_modules/readable-stream"]
      }
  }
}